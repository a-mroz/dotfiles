# Copy-paste between X and terminal. E.g. usage: `ls | ctrlc`.
alias ctrlc='xclip -selection c'
alias ctrlv='xclip -selection c -o'

# Compile LateX document with docker image
alias latex-docker='docker run --rm -i --user="$(id -u):$(id -g)" -v $PWD:/data blang/latex "$@"'

alias myip="ip -br -c a"
alias process="ps aux"
alias mem="free -h"
alias cpu="lscpu"
alias disk="df -h"

# ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
